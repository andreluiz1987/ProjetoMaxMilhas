<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="IDA"
                            android:textColor="#879395"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_arrow_rigth" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_date_from"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#879395"
                            android:textSize="14sp"
                            tools:text="Quarta, 08 de dezembro" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_company_name_onward"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#879395"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            tools:text="GOL" />

                        <TextView
                            android:id="@+id/txt_fligth_number_onward"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#879395"
                            android:textSize="12sp"
                            tools:text="G3-9018" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_time_boarding_onward"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#879395"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            tools:text="06:35" />

                        <TextView
                            android:id="@+id/txt_iata_boarding_onward"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#879395"
                            android:textSize="12sp"
                            tools:text="CNC" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_total_time_onward"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#879395"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                tools:text="1H55" />

                            <TextView
                                android:id="@+id/txt_type_onward"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#879395"
                                android:textSize="12sp"
                                tools:text="VOO DIRETO" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_time_lading_onward"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#879395"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                tools:text="06:35" />

                            <TextView
                                android:id="@+id/txt_iata_lading_onward"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#879395"
                                android:textSize="12sp"
                                tools:text="CNC" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="5dp"
                android:background="@drawable/line_dot_bg"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="VOLTA"
                            android:textColor="#879395"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_arrow_left" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_date_return"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#879395"
                            android:textSize="14sp"
                            tools:text="Quinta, 089 de dezembro" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_company_name_return"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#879395"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            tools:text="GOL" />

                        <TextView
                            android:id="@+id/txt_fligth_number_return"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#879395"
                            android:textSize="12sp"
                            tools:text="G3-9018" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_time_boarding_return"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#879395"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            tools:text="06:35" />

                        <TextView
                            android:id="@+id/txt_iata_boarding_return"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#879395"
                            android:textSize="12sp"
                            tools:text="CNC" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_total_time_return"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#879395"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                tools:text="1H55" />

                            <TextView
                                android:id="@+id/txt_type_return"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#879395"
                                android:textSize="12sp"
                                tools:text="VOO DIRETO" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_time_lading_return"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#879395"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                tools:text="06:35" />

                            <TextView
                                android:id="@+id/txt_iata_lading_return"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#879395"
                                android:textSize="12sp"
                                tools:text="CNC" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="5dp"
                android:background="@drawable/line_dot_bg"></LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#1ABC9C"
                android:elevation="2dp"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                tools:text="Comprar R$325,00" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>